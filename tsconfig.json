{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "src",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "experimentalDecorators": true,
    "skipLibCheck": true, 
    "types": [
      "vitest/globals"
    ]
  },
  "include": ["src/**/*.ts", "src/loggers/console-logger.ts"],
  "exclude": ["node_modules", "dist"],
}
